generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  collectionId Int    @id @default(autoincrement())
  userEmail    String
  animeId      String
  animeImage   String
  animeTitle   String

  @@unique([animeId, userEmail]) //jika ada data yang sama maka akan dianggap duplicate
}

model Comment {
  commentId   Int    @id @default(autoincrement())
  userEmail   String
  userComment String
  userName    String
  animeId     String
  animeTitle  String
}
